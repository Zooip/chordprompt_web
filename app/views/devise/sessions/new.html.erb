<div class="title">
  <%=t('devise.sessions.titles.login')%>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => { class:"big-form"}) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: t('devise.sessions.labels.email'), class: "input form-input", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: t('devise.sessions.labels.password'), class: "input form-input", required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field center-field">
      <%= f.check_box :remember_me, class:"noborder-checkbox dark" %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="container-btn">
    <%= f.submit "Log in", class: 'btn' %>
  </div>
<% end %>

<script>
  document.getElementById('new_user').action+=window.location.hash
</script>

<%= render "devise/shared/links" %>
